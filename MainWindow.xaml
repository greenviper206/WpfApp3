<Window x:Class="_2025_WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2025_WpfApp1"
        mc:Ignorable="d"
        Title="飲料點餐系統" Height="688" Width="990">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="530" MinWidth="530"/>
            <ColumnDefinition MinWidth="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="364" MaxHeight="500"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="DrinkMenu_StackPanel" Margin="10,10,10,8" Grid.Row="1"/>
        <Button x:Name="OrderButton" Grid.Column="1" Content="訂購" Margin="166,104,128,104" FontSize="16" Click="OrderButton_Click" Grid.Row="1"/>
        <TextBlock x:Name="Result_TextBlock" Margin="10,10,10,10" Grid.Row="2" TextWrapping="Wrap" FontSize="16" Background="#FFF3F5E3" Grid.ColumnSpan="2" Padding="10,10,10,10"/>
        <GroupBox Header="內用/外帶" Background="#FFF0F3EB" Grid.ColumnSpan="2" Margin="10,5,10,5">
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="RadioButton1" Content="內用" HorizontalAlignment="Left" Margin="30,5,0,5" Width="100" FontSize="16" FontWeight="Bold" Foreground="Blue" VerticalContentAlignment="Center" Checked="RadioButton_Checked" IsChecked="True"/>
                <RadioButton x:Name="RadioButton2" Content="外帶" HorizontalAlignment="Left" Margin="30,5,0,5" Width="100" FontSize="16" FontWeight="Bold" Foreground="Blue" VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
            </StackPanel>

        </GroupBox>
    </Grid>
</Window>